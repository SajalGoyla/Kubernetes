###create a file 
vi deploy.yml
###############################
apiVersion: apps/v1
kind: Deployment 
metadata:
  name: my-first-deployment
  labels:
    app: nginx
  
spec: ##this is deployment pecification
  replicas: 3
  selector:
    matchLabels: #match expression
      app: nginx 
  template: ##3this is template for your container
    metadata:
      labels:
        app: nginx 
    spec: ##this specification is specification for template
      containers:
      - name: nginx 
        image: nginx:1.14.2
        ports:
        - containerPort: 80 
      #############save the file
###apply the file
kubectl apply -f deploy.yml
kubectl get deploy
kubectl get pod
###lets delete a pod and see it comeback or not
kubectl get pod 
kubectl delete pod my-first-deployment-86dcfdf4c6-rvrbl
kubectl get pod

